<html lang='en'>

  <head>
    {{>head}}
    <title>Orders</title>
  </head>

  <body>
    <div class='wrapper'>
      {{>admin/header}}
      <main class='page'>
        <section class='page__toolbar toolbar'>
        </section>
        {{>pagination}}
        <section class='page__table'>
          <div class='table__container __container'>
            <table class='table'>
              <thead>
                <tr>
                  <th scope='col'>Order â„–</th>
                  <th scope='col'>Customer Email</th>
                  <th scope='col'>Customer Name</th>
                  <th scope='col'>Total</th>
                  <th scope='col'>Delivery</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#each orders}}
                  <tr>
                    <td scope='row' class='col-pink'>{{id}}</td>
                    <td class='col-off_purple'>{{customerEmail}}</td>
                    <td class='col-off_purple'>{{customerName}}</td>
                    <td class='price col-off_blue'>{{totalPrice}}</td>
                    {{#if deliveryAddress}}
                      <td class='col-off_blue'>{{deliveryAddress}}</td>
                    {{else}}
                      <td class='col-off_blue'>Self-pickup</td>
                    {{/if}}
                    <td>
                      <a href='/admin/orders/{{id}}' class='btn' title='View'>
                        <span class='material-icons'>visibility</span>
                      </a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </section>
      </main>
    </div>
  </body>

</html>
