<html lang='en'>

  <head>
    {{>head}}
    <title>Cart</title>
  </head>

  <body>
    <div class='wrapper'>
      {{>header}}
      <main class='page'>
        <section class='page__toolbar toolbar'>
          <ul class='toolbar__list'>
            <li class='toolbar__item'>
              <button class='btn' title='Back'>
                <span class='material-icons'>arrow_back</span>
              </button>
            </li>
            <li class='toolbar__item'>
              <button class='btn' title='Checkout'>
                <span class='material-icons'>shopping_cart_checkout</span>
              </button>
            </li>
          </ul>
        </section>
        <section class='page__info-block info-block'>
          <div class='info-block__container __container'>
            <div class='cart-info card'>
              <h3 class='card-header'>Cart info</h3>
              <div class='card-body'>
                <table class='table'>
                  <thead>
                    <tr>
                      <th scope='col'>Image</th>
                      <th scope='col'>Product name</th>
                      <th scope='col'>Vendor code</th>
                      <th scope='col'>Price</th>
                      <th scope='col'>Amount</th>
                      <th scope='col'></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>
                        <img
                          src='/img/products/STRANDMON.png'
                          alt='Product'
                          class='img-thumbnail'
                        />
                      </td>
                      <td class='col-pink'>STRANDMON</td>
                      <td class='col-pantone_purple'>Ikea</td>
                      <td class='price col-off_blue'>179</td>
                      <td>
                        <div class='amount_setting btn-group' role='group'>
                          <button>-</button>
                          <input type='number' min='0' max='100' value='1' />
                          <button>+</button>
                        </div>
                      </td>
                      <td>
                        <button
                          type='button'
                          class='btn btn-danger'
                        >Remove</button>
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <img
                          src='/img/products/EKOLSUND.png'
                          alt='Product'
                          class='img-thumbnail'
                        />
                      </td>
                      <td class='col-pink'>EKOLSUND</td>
                      <td class='col-pantone_purple'>Ikea</td>
                      <td class='price col-off_blue'>40</td>
                      <td>
                        <div class='amount_setting btn-group' role='group'>
                          <button>-</button>
                          <input type='number' min='0' max='100' value='1' />
                          <button>+</button>
                        </div>
                      </td>
                      <td>
                        <button type='button' class='btn'>Remove</button>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>
      </main>
    </div>
  </body>

</html>
