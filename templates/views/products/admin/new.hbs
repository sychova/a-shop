<html lang='en'>

  <head>
    {{>head}}
    <title>Product detail</title>
  </head>

  <body>
    <div class='wrapper'>
      {{>admin/header}}
      <main class='page'>
        <section class='page__toolbar toolbar'>
          <ul class='toolbar__list'>
            <li class='toolbar__item'>
            </li>
            <li class='toolbar__item'>
              <button
                type='button'
                class='btn btn-primary'
                data-toggle='modal'
                data-target='#cancelModal'
                title='Cancel product'
              >
                <span class='material-icons'>close</span>
              </button>
            </li>
          </ul>
        </section>
        <section class='page__product-block product-block'>
          <div class='product-block__container __container'>
            <div class='product-info card'>
              <div class='card-body product-info-body'>
                <form
                  action='/admin/products'
                  enctype='multipart/form-data'
                  method='POST'
                >
                  <div class='form-row'>
                    <div class='col-md-6'>
                      <div class='img-container'>
                        <img
                          src='../../img/products/stub.png'
                          alt='Product'
                          class='img-container'
                        />
                      </div>
                      <ul class='toolbar__list'>
                        <li class='toolbar__item'>
                          <input
                            id='image'
                            type='file'
                            name='image'
                            accept='image/*'
                          />
                        </li>
                        <li class='toolbar__item'>
                          <a id='imageDelete' class='btn' title='Delete'>
                            <span class='material-icons'>delete</span>
                          </a>
                        </li>
                      </ul>
                      <span class='text-danger'>{{errors.file}}</span>
                    </div>
                    <div class='col-md-6'>
                      <div class='form-group'>
                        <label for='productName'>Product name:</label>
                        {{#if errors.name}}
                          <input
                            type='text'
                            class='form-control is-invalid'
                            id='productName'
                            name='name'
                            value='{{product.name}}'
                          />
                          <span class='text-danger'>{{errors.name}}</span>
                        {{else}}
                          <input
                            type='text'
                            class='form-control'
                            id='productName'
                            name='name'
                            value='{{product.name}}'
                          />
                        {{/if}}
                      </div>
                      <div class='form-group'>
                        <label for='vendorCode'>Vendor code:</label>
                        {{#if errors.vendorCode}}
                          <input
                            type='text'
                            class='form-control is-invalid'
                            id='vendorCode'
                            name='vendorCode'
                            value='{{product.vendorCode}}'
                          />
                          <span class='text-danger'>{{errors.vendorCode}}</span>
                        {{else}}
                          <input
                            type='text'
                            class='form-control'
                            id='vendorCode'
                            name='vendorCode'
                            value='{{product.vendorCode}}'
                          />
                        {{/if}}
                      </div>
                      <div class='form-group'>
                        <label for='productPrice'>Price $:</label>
                        {{#if errors.price}}
                          <input
                            type='number'
                            class='form-control is-invalid'
                            id='productPrice'
                            name='price'
                            value='{{product.price}}'
                          />
                          <span class='text-danger'>{{errors.price}}</span>
                        {{else}}
                          <input
                            type='number'
                            class='form-control'
                            id='productPrice'
                            name='price'
                            value='{{product.price}}'
                          />
                        {{/if}}
                      </div>
                      <div class='form-group'>
                        <label for='productDescription'>Description:</label>
                        {{#if errors.description}}
                          <textarea
                            class='form-control is-invalid'
                            id='productDescription'
                            name='description'
                          >{{product.description}}</textarea>
                          <span
                            class='text-danger'
                          >{{errors.description}}</span>
                        {{else}}
                          <textarea
                            class='form-control'
                            id='productDescription'
                            name='description'
                          >{{product.description}}</textarea>
                        {{/if}}
                      </div>
                      <div class='form-group'>
                        <legend class='col-form-label'>Product status:</legend>
                        <div class='form-check'>
                          {{#if product.isDeleted}}
                            <input
                              class='form-check-input'
                              type='checkbox'
                              name='isDeleted'
                              value='true'
                              id='status'
                              checked
                            />
                          {{else}}
                            <input
                              class='form-check-input'
                              type='checkbox'
                              name='isDeleted'
                              value='true'
                              id='status'
                              unchecked
                            />
                          {{/if}}
                          <label class='form-check-label' for='status'>
                            Active
                          </label>
                        </div>
                      </div>
                      <button
                        type='submit'
                        id='save'
                        class='btn'
                        title='Save'
                      >Save</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>
      </main>
    </div>
    {{>admin/modalCancelConfirm}}
    {{>scripts}}
    <script src='/js/admin/new.js'></script>
  </body>

</html>
