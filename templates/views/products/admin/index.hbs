<html lang='en'>

  <head>
    {{>head}}
    <title>Products</title>
  </head>

  <body>
    <div class='wrapper'>
      {{> admin/header}}
      <main class='page'>
        <section class='page__toolbar toolbar'>
          <ul class='toolbar__list'>
            <li class='toolbar__item'>
              <button id='view' class='btn' title='View product'>
                <span class='material-icons'>visibility</span>
              </button>
            </li>
            <li class='toolbar__item'>
              <button id='add' class='btn' title='Add product'>
                <span class='material-icons'>note_add</span>
              </button>
            </li>
            <li class='toolbar__item'>
              <button id='edit' class='btn' title='Edit product'>
                <span class='material-icons'>edit</span>
              </button>
            </li>
            <li class='toolbar__item'>
              <button id='delete' class='btn' title='Delete product'>
                <span class='material-icons'>delete</span>
              </button>
            </li>
            <li class='toolbar__item'>
              <button id='restore' class='btn' title='Restore product'>
                <span class='material-icons'>restore_from_trash</span>
              </button>
            </li>
          </ul>
        </section>
        {{>pagination}}
        {{>toast}}
        {{>products}}
      </main>
    </div>
    {{>scripts}}
    <script src='/js/products.js'></script>
  </body>

</html>
