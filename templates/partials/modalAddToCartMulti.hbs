<div
  class='modal fade'
  id='addModal'
  tabindex='-1'
  role='dialog'
  aria-labelledby='addModalLabel'
  aria-hidden='true'
  data-backdrop='static'
  data-keyboard='false'
>
  <div class='modal-dialog' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='addModalLabel'>Warning</h5>
      </div>
      <div class='modal-body'>
        <span>Your products have successfully been added to the cart!</span>
      </div>
      <div class='modal-footer'>
        <button id='addToCart' class='btn' title='Add product to Cart'>
          <span>Close</span>
        </button>
      </div>
    </div>
  </div>
</div>
