<section class='page__pagination pagination'>
  <ul class='pagination'>
    <li class='page-item'>
      {{#if pagination.pagePrevious}}
        <a class='page-link' href='{{pagination.pagePrevious}}'>Previous</a>
      {{else}}
        <a class='page-link' href='#'>Previous</a>
      {{/if}}
    </li>
    <li class='page-item'>
      <a class='page-link' href='#'>{{pagination.pageCurrent}}</a>
    </li>
    <li class='page-item'>
      {{#if pagination.pageNext}}
        <a class='page-link' href='{{pagination.pageNext}}'>Next</a>
      {{else}}
        <a class='page-link' href='#'>Next</a>
      {{/if}}
    </li>
  </ul>
</section>
